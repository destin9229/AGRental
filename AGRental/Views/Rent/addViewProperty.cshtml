@model List<AGRental.Models.Properties>

@{
    ViewData["Title"] = "addViewProperty";
}

<!-- Title for the page-->
<h2 align="center">Congrats you are the new ower of the below property!</h2>

<div>
    <h5>Status : <font color="red">Avaliable</font></h5>
    <h6>Property Name: <i>Model.property_name</i></h6>
    <h6>City: <i>Model.city</i></h6>
    <h6>Address: <i>Model.address</i></h6>
    <h6>Price: $<i>Model.price</i></h6>
    <h6>Bedrooms: <i>Model.bedrooms</i></h6>
    <h6>Bathrooms: <i>Model.bathrooms</i></h6>
</div>

<!-- Button to return to view the Account-->
<div align="center" style="width:100%; height:100%">
    <input type="button" value="View Account" onclick="@("window.location.href='" + @Url.Action("Index", "Account") + "'");" />
</div>