@model AGRental.Models.Properties

@{
    ViewData["Title"] = "ViewProperty";
}

<!--Title of the page-->
<h2 align="center">Here is the property details</h2>

<!--Shows the data for a individual property-->
<div align="center" style="width:100%; height:100%">

    <h5>Status : <font color="green">Avaliable</font></h5>
    <h6>Property Name: <i>@Model.property_name</i></h6>
    <h6>City: <i>@Model.city</i></h6>
    <h6>Address: <i>@Model.address</i></h6>
    <h6>Price: $<i>@Model.price</i></h6>
    <h6>Bedrooms: <i>@Model.bedrooms</i></h6>
    <h6>Bathrooms: <i>@Model.bathrooms</i></h6>

    @if (@Model.bedrooms == 3)
    {
        <center>
            <img src="https://images1.apartments.com/i2/HrWr0jiIp8b1W5P4x1tLsd3mJE5hyoYFw1DNC1qRiDw/117/monterra-hollywood-fl-3br2ba.jpg" alt="Girl in a jacket" style="width:500px;height:600px;">
        </center>
    }
    @if (@Model.bedrooms == 2)
    {
        <center>
            <img src="https://spxeastwebfarm7-spherexxcom.netdna-ssl.com/common/dynamic.asp?p=/common/uploads/www_apartmentsincoopercityfl_com/floorplans/224-FLO-B.jpg&w=1&mw=550&h=1&mh=450" alt="Girl in a jacket" style="width:500px;height:600px;">
        </center>
    }
    @if (@Model.bedrooms == 1)
    {
        <center>
            <img src="https://spxeastwebfarm7-spherexxcom.netdna-ssl.com/common/dynamic.asp?p=/common/uploads/www_apartmentsincoopercityfl_com/floorplans/224-FLO-A.jpg&w=1&mw=550&h=1&mh=450" alt="Girl in a jacket" style="width:500px;height:600px;">
        </center>
    }



    <!--Button adds property to account-->
    <a asp-controller="Rent" asp-action="Index"><input type="button" value="Return to Properties" class="btn btn-secondary btn-lg" /></a>
    <a asp-controller="Rent" asp-action="addViewProperty" asp-route-Property_ID="@Model.Property_ID"><input type="button" value="Rent Property" class="btn btn-secondary btn-lg" /></a>


</div>
