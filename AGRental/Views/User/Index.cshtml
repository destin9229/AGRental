@model List<AGRental.Models.User>

@{
    ViewBag.Title = "Users Index";
}
<h1>@ViewBag.Title</h1>

@if (ViewBag.Username.Length > 0)
{
    <h3>Welcome, @ViewBag.Username !!!</h3>
    <p class="text-success">You have Succsessfully Logged In @ViewBag.UserType <span class="glyphicon glyphicon-ok " aria-hidden="true"></span></p>
}

<h2>List of Users on Database</h2>
@if (Model.Count == 0)
{
    <p>No users yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Name</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td><a asp-controller="User" asp-action="Detail" asp-route-userId="@user.ID">@user.Username</a></td>
            </tr>
        }
    </table>
}
<p><a asp-controller="User" asp-action="SignUp">User SignUp</a> | <a asp-controller="User" asp-action="Login">Login</a> | <a asp-controller="User" asp-action="Logout">Logout</a></p>
