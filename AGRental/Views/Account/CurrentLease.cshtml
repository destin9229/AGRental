@model AGRental.Models.Properties

@{
    ViewData["Title"] = "CurrentLease";;
}

<!--Title of the page-->
<h1 align="center">Current Lease</h1>
<h6>Here is you current lease information.</h6>


<!--Shows the data for a individual property-->
<div align="center" style="width:100%; height:100%">

    <h5>Status : <font color="red">Owned</font></h5>
    <h6>Property Name: <i>@Model.property_name</i></h6>
    <h6>City: <i>@Model.city</i></h6>
    <h6>Address: <i>@Model.address</i></h6>
    <h6>Price: $<i>@Model.price</i></h6>
    <h6>Bedrooms: <i>@Model.bedrooms</i></h6>
    <h6>Bathrooms: <i>@Model.bathrooms</i></h6>

    <!--Button to Return to Account Page-->
    <input type="button" value="Return to Account" onclick="@("window.location.href='" + @Url.Action("Index", "Account") + "'");" />
</div>
